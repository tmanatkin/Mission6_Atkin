@model Film
@{
    ViewData["Title"] = "Add a Film to The Collection";
}

<div class="flex-center">
    <h1 class="display-4">Add a Film to The Collection</h1>
    <p>Add a Film to The Collection</p>

    <form method="post">

        <label asp-for="Category">Category</label>
        <select asp-for="Category" required>
            <option value="" disabled selected>Select a category</option>
            <option value="action/adventure">Action/Adventure</option>
            <option value="comedy">Comedy</option>
            <option value="drama">Drama</option>
            <option value="family">Family</option>
            <option value="horror/suspense">Horror/Suspense</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
            <option value="Miscellaneous">Miscellaneous</option>
        </select>

        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" required/>

        <label asp-for="Year">Year</label>
        <input asp-for="Year" type="number" required />

        <label asp-for="Director">Director</label>
        <input asp-for="Director" type="text" required />

        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" required>
            <option value="" disabled selected>Select a rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
        </select>

        <container class="checkbox-container">
            <label asp-for="Edited">Edited?</label>
            <input asp-for="Edited" type="checkbox" value="true">
        </container>

        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" type="text" />

        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" type="text" maxlength="25"/>

        <button>Submit</button>
    </form>
</div>